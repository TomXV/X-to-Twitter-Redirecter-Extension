{
  "manifest_version": 3,
  "name": "X to Twitter Redirect",
  "version": "1.1",
  "description": "Redirects x.com, www.x.com, and www.twitter.com to twitter.com, adding the mx=1 parameter",
  "permissions": [
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "*://x.com/*",
    "*://www.x.com/*",
    "*://twitter.com/*",
    "*://www.twitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
